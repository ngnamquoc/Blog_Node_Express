<div class="author">
    <h1 class="author_heading">Hi, I am William!</h1>
    <p class="author_body">Web Developer & Cyber Security Student</p>
</div>

<img src="/img/hero-image.png" alt="author profile picture" class="hero-image"  >

<section class="articles">
    <h2 class="articles_heading">Latest Post</h2>
    <ul class="article_ul">
        <% data.forEach(record => { %>
            <li>
                <a href="/post/<%= record._id %>">
                    <span><%= record.title %></span>
                    <span class="article_list_date"><%= record.createdAt.toDateString() %></span>
                </a>
            </li>
         
        <% }) %>
      
        
    </ul>

    <% if (nextPage !==null) { %>
        
        <a href="/?page=<%=  nextPage%>" class="pagination">&lt; View Older Posts</a>
    <% } %>

</section>